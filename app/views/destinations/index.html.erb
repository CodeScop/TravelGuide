<p id="notice"><%= notice %></p>

<h2>Destinations</h2>

<div class="row">
   <% @destinations.each do |destination| %>
    <div class="col-md-3">
    <div class="well center-it">
        <h3><%= link_to destination.name, destination %></h3>
        <%= image_tag destination.image.url(:thumb) %>
    </div>
    </div>
  <% end %>
</div>

<button type="button" class="btn btn-primary"><%= link_to 'New Destination', new_destination_path %></button>
